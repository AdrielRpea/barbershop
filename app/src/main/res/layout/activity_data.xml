<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primercolor"
    android:padding="16dp"
    tools:context=".BookingPage.DataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Informasi Data Diri"
            android:textColor="@color/whiteprimary"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FBTitle"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Name"
            android:textColor="@color/whiteprimary"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/TVname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/backgroundform"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="Name"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FBTitle"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Addres"
            android:textColor="@color/whiteprimary"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/TVaddres"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/backgroundform"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="Addres"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FBTitle"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Phone Number"
            android:textColor="@color/whiteprimary"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/TVphonenumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/backgroundform"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="Phone Number"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FBTitle"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Email"
            android:textColor="@color/whiteprimary"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/TVemail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/backgroundform"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="Email"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/hapus"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:text="Hapus" />
            <Button
                android:id="@+id/logout"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Selesai" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>