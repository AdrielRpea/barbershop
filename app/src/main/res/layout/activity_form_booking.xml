<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/primercolor"
    tools:context=".BookingPage.FormBookingActivity">

        <RelativeLayout
            android:id="@+id/FBInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/FBLogo"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/FBTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FBLogo"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Barbershop Appointment Form"
                android:textColor="@color/whiteprimary"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/FBNameinputTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FBTitle"
                android:layout_alignParentStart="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="Name"
                android:textColor="@color/whiteprimary"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/FBNameinputdata"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/FBNameinputTitle"
                android:layout_marginBottom="10dp"
                android:background="@drawable/backgroundform"
                android:hint="Enter your name"
                android:paddingLeft="10dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/FBAddressinputTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FBNameinputdata"
                android:layout_marginBottom="5dp"
                android:text="Address"
                android:textColor="@color/whiteprimary"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/FBAddressinputdata"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/FBAddressinputTitle"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/backgroundform"
                android:hint="Enter your address"
                android:paddingLeft="10dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/FBPhoneNumberinputTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FBAddressinputdata"
                android:layout_marginBottom="5dp"
                android:singleLine="true"
                android:text="Phone Number"
                android:textColor="@color/whiteprimary"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/FBPhoneNumberinputdata"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/FBPhoneNumberinputTitle"
                android:layout_marginBottom="10dp"
                android:background="@drawable/backgroundform"
                android:ems="12"
                android:hint="Enter your phone number"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/FBEmailinputTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FBPhoneNumberinputdata"
                android:layout_marginBottom="5dp"
                android:text="Email"
                android:textColor="@color/whiteprimary"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/FBEmailinputdata"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/FBEmailinputTitle"
                android:background="@drawable/backgroundform"
                android:hint="Enter your email"
                android:paddingLeft="10dp"
                android:singleLine="true" />

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/FBEmailinputdata"
                android:layout_marginTop="4dp"
                android:text="Simpan data saya"
                android:textColor="@color/whiteprimary" />

            <TextView
                android:id="@+id/FBDatasaya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkbox"
                android:gravity="center"
                android:text="Data saya"
                android:textColor="@color/whiteprimary"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>

    <Button
        android:id="@+id/FBBtnCancel"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="55dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/backgroundbuttonwhite"
        android:text="Cancel"
        android:textSize="16dp" />

    <Button
        android:id="@+id/FBBtnNext"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/backgroundbuttonpurple"
        android:text="Next"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="55dp"
        android:textColor="@color/whiteprimary"
        android:textSize="16dp" />
</RelativeLayout>
