<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <RelativeLayout
        android:id="@+id/ST1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/ST1Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/ST1Gambar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:background="@color/black"
                android:src="@drawable/style1" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/ST1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/ST1Image"
            android:text="Short Haircut Combed Over + Undercut"
            android:textColor="@color/blackprimary"
            android:textSize="12dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ST1BtnSelect"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/ST1Name"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/ST1Timing"
            android:background="@drawable/backgroundbuttonpurple"
            android:text="Select +"
            android:textColor="@color/blackprimary"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/ST1Harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ST1Name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/ST1Image"
            android:text="Rp. 120.000"
            android:textColor="@color/abuabu1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ST1Timing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ST1Harga"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="130dp"
            android:layout_toRightOf="@+id/ST1Image"
            android:drawableStart="@drawable/icon_clock1"
            android:text="  60 Mins"
            android:textColor="@color/abuabu1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ST1Timing"
            android:layout_marginTop="12dp"
            android:background="@color/secondarytext" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>